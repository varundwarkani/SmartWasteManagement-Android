<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/llnotification"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cvuser"
        android:layout_margin="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvNotificationDesc"
                android:textColor="#000"
                android:textSize="15dp"
                android:text="Description"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvNotificationDesc"
                android:id="@+id/tvNotificationStatus"
                android:textSize="15dp"
                android:textColor="#000"
                android:text="Status"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvNotificationStatus"
                android:id="@+id/tvNotificationCurrently"
                android:textColor="#000"
                android:textSize="15dp"
                android:text="Status"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvNotificationCurrently"
                android:id="@+id/tvNotificationDate"
                android:textColor="#000"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:text="Status"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>