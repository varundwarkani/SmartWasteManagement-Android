<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/llnotification"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cvnotification"
        android:layout_margin="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvNotificationDesc"
                android:textColor="#000"
                android:textSize="15dp"
                android:text="Description"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvNotificationDesc"
                android:id="@+id/tvNotificationPercent"
                android:textColor="#000"
                android:textSize="15dp"
                android:text="Percentage"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Take action"
                android:textColor="#FFF"
                android:id="@+id/btaction"
                android:background="#CF4332"
                android:layout_below="@+id/tvNotificationPercent"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>